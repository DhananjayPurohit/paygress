# Service Configuration
RUN_MODE=nostr
BIND_ADDR=0.0.0.0:8080
CASHU_DB_PATH=/app/data/cashu.db
POD_NAMESPACE=user-workloads
MINIMUM_POD_DURATION_SECONDS=60
ENABLE_CLEANUP_TASK=true
RUST_LOG=info

# Interface Configuration
ENABLE_NOSTR=true
ENABLE_MCP=true
ENABLE_HTTP=true

# HTTP Settings (Only required if ENABLE_HTTP=true)
HTTP_PORT=8080
HTTP_BIND_ADDR=0.0.0.0:8080

# Nostr Configuration
NOSTR_RELAYS=wss://relay.damus.io,wss://nos.lol,wss://relay.nostr.band,wss://nostr.wine,wss://nostr.mom
NOSTR_PRIVATE_KEY=YOUR_NOSTR_PRIVATE_KEY_HERE

# Cashu Configuration
WHITELISTED_MINTS=https://nofees.testnut.cashu.space,https://testnut.cashu.space

# SSH Pod Configuration
BASE_IMAGE=linuxserver/openssh-server:latest
SSH_HOST=YOUR_SERVER_PUBLIC_IP
SSH_PORT_RANGE_START=1000
SSH_PORT_RANGE_END=1999

# Pod Specifications (JSON file path)
POD_SPECS_FILE=pod-specs.json

# ==========================================
# Nginx / L402 Configuration
# ==========================================
# Lightning Client (LNURL, LND, CLN, NWC)
LN_CLIENT_TYPE=LNURL
LNURL_ADDRESS=https://your-lnurl-server.com
# LND_ADDRESS=https://127.0.0.1:10009
# MACAROON_FILE_PATH=/path/to/admin.macaroon
# CERT_FILE_PATH=/path/to/tls.cert
# ROOT_KEY=your-root-key-change-me

# Cashu L402 Settings
CASHU_ECASH_SUPPORT=true
CASHU_REDEEM_ON_LIGHTNING=true
CASHU_WALLET_SECRET=CHANGE-ME-USE-openssl-rand-hex-32
NGINX_RUST_LOG=info
